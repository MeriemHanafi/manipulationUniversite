{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".", // Permet les imports relatifs Ã  la racine du projet
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true // Si tu as encore du JS dans tes fichiers
    ,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "backend/src/**/*",
    "backend/prisma/**/*"
  ],
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules"
  ]
}
